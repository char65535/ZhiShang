<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="请输入标题："
            android:textColor="@color/green"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_dialog"
            android:enabled="true"
            android:gravity="top"
            android:hint="@string/record_title"
            android:scrollbars="vertical"
            android:textColor="@color/oldCopper"
            android:textColorHint="@color/Ash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/textArea"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/cirbtn_cancel"
                android:padding="14dp"
                app:srcCompat="@drawable/cancel" />

            <ImageView
                android:id="@+id/confirm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/textArea"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/cirbtn2"
                android:padding="14dp"
                app:srcCompat="@drawable/submit" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>